<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f6f5">

    <Button
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#1dcaeb"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/button_next"
        android:background="#f5f6f5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="@string/about_the_dish"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/create_cold_dish"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/view2"
                    android:layout_toStartOf="@+id/view2"
                    android:src="@drawable/filters_cold_dish_unselected" />

                <TextView
                    android:id="@+id/create_cold_dish_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/create_cold_dish"
                    android:layout_alignEnd="@+id/create_cold_dish"
                    android:layout_alignLeft="@+id/create_cold_dish"
                    android:layout_alignRight="@+id/create_cold_dish"
                    android:layout_alignStart="@+id/create_cold_dish"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:text="@string/cold_dish"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="1dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="#a2a2a2" />

                <ImageView
                    android:id="@+id/create_warm_dish"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/view2"
                    android:layout_toRightOf="@+id/view2"
                    android:src="@drawable/filters_warm_dish_unselected" />

                <TextView
                    android:id="@+id/create_warm_dish_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/create_warm_dish"
                    android:layout_alignEnd="@+id/create_warm_dish"
                    android:layout_alignLeft="@+id/create_warm_dish"
                    android:layout_alignRight="@+id/create_warm_dish"
                    android:layout_alignStart="@+id/create_warm_dish"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:text="@string/warm_dish"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="90dp"
                    android:layout_below="@id/view2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="#a2a2a2" />

                <ImageView
                    android:id="@+id/create_spicy_dish"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/view2"
                    android:layout_toLeftOf="@+id/view2"
                    android:src="@drawable/filters_spicy_unselected" />

                <TextView
                    android:id="@+id/create_dish_spicy_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/create_spicy_dish"
                    android:layout_alignEnd="@+id/create_spicy_dish"
                    android:layout_alignLeft="@+id/create_spicy_dish"
                    android:layout_alignRight="@+id/create_spicy_dish"
                    android:layout_alignStart="@+id/create_spicy_dish"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:text="@string/spicy"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <ImageView
                    android:id="@+id/create_very_spicy_dish"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/view2"
                    android:layout_toRightOf="@+id/view2"
                    android:src="@drawable/filters_very_spicy_unselected" />

                <TextView
                    android:id="@+id/create_very_spicy_dish_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/create_very_spicy_dish"
                    android:layout_alignEnd="@+id/create_very_spicy_dish"
                    android:layout_alignLeft="@+id/create_very_spicy_dish"
                    android:layout_alignRight="@+id/create_very_spicy_dish"
                    android:layout_alignStart="@+id/create_very_spicy_dish"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:text="@string/very_spicy"
                    android:textAppearance="?android:attr/textAppearanceSmall" />


            </RelativeLayout>

            <TextView
                android:id="@+id/create_food_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/food_weight"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:layout_marginTop="15dp"
                android:background="#fff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/create_dish_weight_text_minus"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="-"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#fc6962" />

                <TextView
                    android:id="@+id/create_dish_weight_text"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_toLeftOf="@+id/create_dish_weight_text_plus"
                    android:layout_toRightOf="@+id/create_dish_weight_text_minus"
                    android:gravity="center"
                    android:text="@string/any"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#fc6962" />

                <TextView
                    android:id="@+id/create_dish_weight_text_plus"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="+"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#fc6962" />
            </RelativeLayout>

            <TextView
                android:id="@+id/create_food_number_pieces"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/number_of_pieces"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp" />

            <com.yuvalsuede.homefood.spinnerwheel.WheelHorizontalView
                android:id="@+id/create_dish_pieces_wheel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/create_food_how_many_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/for_how_many_people"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp" />

            <com.yuvalsuede.homefood.spinnerwheel.WheelHorizontalView
                android:id="@+id/create_dish_people_wheel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/search_switch_delivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="#fff"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:text="@string/delivery"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff6766" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/search_switch_contains_milk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:text="@string/contains_milk"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff6766" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/search_switch_vegetarian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:text="@string/vegetarian"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff6766" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/search_switch_vegan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:text="@string/vegan"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff6766" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/search_switch_gluten_free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:text="@string/gluten_free"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff6766" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/search_switch_sugar_free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:text="@string/sugar_free"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff6766" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/search_switch_main_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:text="@string/main_course"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff6766" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/search_switch_suitable_for_dessert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:text="@string/suitable_for_dessert"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff6766" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/search_switch_kosher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:text="@string/kosher"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff6766" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/search_switch_glat_kosher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:text="@string/glat_kosher"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff6766" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>