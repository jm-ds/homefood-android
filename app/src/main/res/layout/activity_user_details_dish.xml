<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_details_dish_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:paddingTop="2dp">

    <ImageView
        android:id="@+id/user_details_dish_image"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_mana" />

    <TextView
        android:id="@+id/user_details_dish_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/user_details_dish_image"
        android:gravity="left"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:text=""
        android:textColor="#555555"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/user_details_dish_details_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_details_dish_title"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/user_details_dish_image"
        android:layout_toRightOf="@+id/user_details_dish_image"
        android:gravity="left"
        android:paddingLeft="5dp"
        android:text=""
        android:textColor="#aaaaaa"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/user_details_dish_image"
        android:layout_marginTop="2dp"
        android:background="#c8c7cc" />
</RelativeLayout>