<?xml version="1.0" encoding="utf-8"?>
<com.nirhart.parallaxscroll.views.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:layoutDirection="ltr"
    app:parallax_factor="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f6f6f6"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user_details_user_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/placeholder_person" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f6f6f6"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#f6f6f6"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <TextView
                    android:id="@+id/user_details_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="#f6f6f6"
                    android:text=""
                    android:textColor="#ff6965"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_details_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/user_details_name"
                    android:text=""
                    android:textColor="#575757"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/user_details_dish_count_image"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/obj_icon_food_like" />

                <TextView
                    android:id="@+id/user_details_dish_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/user_details_dish_count_image"
                    android:layout_alignTop="@id/user_details_dish_count_image"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/user_details_dish_count_image"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#ff6965"
                    android:textSize="24sp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:background="#575757" />

            <TextView
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="#f6f6f6"
                android:paddingLeft="30dp"
                android:text="@string/contact_me"
                android:textColor="#ff6965"
                android:textSize="22sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <TextView
                    android:gravity="left"
                    android:id="@+id/user_details_email_label"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/email"
                    android:textColor="#575757"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/user_details_email_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/user_details_email_icon"
                    android:layout_toRightOf="@id/user_details_email_label"
                    android:gravity="left"
                    android:text=""
                    android:textColor="#575757"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/user_details_email_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/user_details_email_label"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/user_details_email_label"
                    android:src="@drawable/icon_profile_mail" />

                <TextView
                    android:gravity="left"
                    android:id="@+id/user_details_phone_label"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/user_details_email_label"
                    android:layout_marginTop="15dp"
                    android:text="@string/phone"
                    android:textColor="#575757"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/user_details_phone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/user_details_phone_label"
                    android:layout_toLeftOf="@+id/user_details_phone_icon"
                    android:layout_toRightOf="@id/user_details_phone_label"
                    android:text=""
                    android:textColor="#575757"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/user_details_phone_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/user_details_phone_label"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/user_details_phone_label"
                    android:src="@drawable/icon_phone" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="#575757" />

            <TextView
                android:gravity="left"
                android:id="@+id/user_details_dish_count_with_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingLeft="30dp"
                android:text=""
                android:textColor="#ff6965"
                android:textSize="22sp" />

            <LinearLayout
                android:id="@+id/user_details_linear_layout_for_dishes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingRight="30dp" />

        </LinearLayout>
    </LinearLayout>

</com.nirhart.parallaxscroll.views.ParallaxScrollView>